<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/text_input_background</item>
        <!-- ... other customizations ... -->
    </style>

    <style name="FloatingHintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_flash_screen</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>
</resources>
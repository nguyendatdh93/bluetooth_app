<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_border_grey_dash_line"
    android:padding="@dimen/_5ssp"
    android:layout_margin="@dimen/_5ssp">

    <LinearLayout
        android:paddingTop="@dimen/_30ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:text="ピーク高さ："
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </TextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_rcv_sub_setting_offline_edt_dltc_from"
                    android:layout_weight="47"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:padding="@dimen/_10ssp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/square_border_grey"
                    android:maxLength="12"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/item_rcv_sub_setting_offline_txt_dltc"
                    android:layout_margin="@dimen/_5ssp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="〜"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_rcv_sub_setting_offline_edt_dltc_to"
                    android:layout_weight="47"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:padding="@dimen/_10ssp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/square_border_grey"
                    android:maxLength="12"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:text="->"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:gravity="end"
                android:layout_gravity="center"
                android:text="↓"
                android:layout_margin="@dimen/_5ssp"
                android:paddingEnd="@dimen/_20ssp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:text="数量："
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </TextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_rcv_sub_setting_offline_edt_quantity_from"
                    android:layout_weight="47"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:padding="@dimen/_10ssp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/square_border_grey"
                    android:maxLength="12"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/item_rcv_sub_setting_offline_txt_quantity"
                    android:layout_margin="@dimen/_5ssp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="〜"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_rcv_sub_setting_offline_edt_quantity_to"
                    android:layout_weight="47"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:padding="@dimen/_10ssp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/square_border_grey"
                    android:maxLength="12"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:text="->"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10ssp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:text="レベル："
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </TextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_rcv_sub_setting_offline_edt_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:padding="@dimen/_10ssp"
                    android:inputType="numberSigned"
                    android:background="@drawable/square_border_grey"
                    android:maxLength="12"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:text="->"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/item_rcv_sub_setting_offline_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20ssp"
            android:background="#ACB8CA"
            android:text="保存"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_rcv_sub_setting_offline_btn_delete"
        android:layout_width="@dimen/_20ssp"
        android:layout_height="@dimen/_20ssp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/minus_512px" />
</RelativeLayout>
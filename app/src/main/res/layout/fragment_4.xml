<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/_10ssp"
    android:weightSum="4">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fragment_4_txt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các lần đo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_4_rcv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragment_4_btn"
            android:layout_below="@id/fragment_4_txt_view"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_10ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_4_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primary_color"
            android:text="abc"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_weight="3"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/fragment_4_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các lần đo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Các lần đo" />

            </RelativeLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_below="@+id/fragment_4_container"
                android:id="@+id/fragment_4_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_4_btn_csv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/primary_color"
                android:text="CSV"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>
    </ScrollView>


</LinearLayout>
